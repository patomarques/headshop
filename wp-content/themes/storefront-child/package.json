{
  "name": "storefront-child-theme",
  "version": "1.0.0",
  "description": "Tema filho do Storefront com estrutura SASS moderna",
  "main": "assets/sass/main.scss",
  "scripts": {
    "sass": "sass assets/sass/main.scss:style.css --watch --style=expanded",
    "sass:build": "sass assets/sass/main.scss:style.css --style=compressed",
    "sass:dev": "sass assets/sass/main.scss:style.css --watch --style=expanded --source-map",
    "build": "npm run sass:build && npm run js:build",
    "js:build": "webpack --mode=production",
    "js:dev": "webpack --mode=development --watch",
    "dev": "concurrently \"npm run sass:dev\" \"npm run js:dev\"",
    "lint:css": "stylelint 'assets/sass/**/*.scss'",
    "lint:js": "eslint 'src/js/**/*.js'",
    "format": "prettier --write 'src/**/*.{scss,js}'"
  },
  "keywords": [
    "wordpress",
    "theme",
    "storefront",
    "woocommerce",
    "sass",
    "scss"
  ],
  "author": "Indicativa Headshop",
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "sass": "^1.69.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "concurrently": "^8.2.2",
    "stylelint": "^16.0.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}

